@{
    ViewData["Title"] = "Logar";
}
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />



<div class="div-color d-flex justify-content-center">
    <div class="container mt-5 rounded lg-2 text-white">
        <h1 class="text-center text-white mb-4">Login</h1>
        <form class="p-4 rounded was-validated">

            <div class="form-group mb-3">
                <label for="email" class="text-black mb-1">E-mail:</label>
                <input type="email" class="form-control" id="email" placeholder="Digite seu e-mail" name="email">
            </div>

            <div class="form-group mb-3 pt-3">
                <label for="nome" class="mb-1">Senha:</label>
                <input type="text" class="form-control" placeholder="Digite sua senha">
            </div>

            <button type="submit" class="btn color-button" style="width: 100%;"style="background-color: #38794B;">Logar</button>


        </form>
    </div>
</div>


<script src="~/js/site.js" asp-append-version="true"></script>
