@{
  ViewData["Title"] = "Cadastrar";
}
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

<div class="text-center text-white">

  <h1 class="display-4">Cadastro</h1>

</div>

<div class="container mt-5 bg-white rounded shadow-white">
  <form class="p-4 rounded">

    <div class="form-group mb-3">
      <label for="nome" class="text-black mb-1">Nome:</label>
      <input type="text" class="form-control" placeholder="Ex: Claudio Da Silva" id="nome" name="nome">
    </div>

    <div class="form-group mb-3">
      <label for="email" class="text-black mb-1">E-mail:</label>
      <input type="email" class="form-control" id="email" placeholder="Digite seu e-mail" name="email">
    </div>

    <div class="form-group mb-3">
      <label for="Cnh" class="text-black mb-1">CNH:</label>
      <input type="text" class="form-control" placeholder="000000000-00">
    </div>

    <div class="form-group mb-3 pt-3">
      <label for="nome" class="mb-1">Senha:</label>
      <input type="text" class="form-control" placeholder="Crie uma senha">
    </div>

    <div class="form-group mb-3">
      <label for="nome" class="mb-1">Confirmar Senha:</label>
      <input type="text" class="form-control" placeholder="Confirme a senha">
    </div>

  </form>
</div>

<script src="~/js/site.js" asp-append-version="true"></script>
